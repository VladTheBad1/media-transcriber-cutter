# Database
DATABASE_URL="file:./dev.db"

# Media Processing
FFMPEG_PATH=""
PROCESSING_WORKERS=3
UPLOAD_DIR="./uploads"
MEDIA_DIR="./media"
TEMP_DIR="./temp"

# Transcription Configuration
PYTHON_PATH="python3"
WHISPERX_SCRIPT_PATH="./scripts/whisperx_service.py"
TRANSCRIPTION_TEMP_DIR="./temp/transcription"

# WhisperX Settings
ENABLE_WHISPERX=true
WHISPERX_MODEL="large-v2"
WHISPERX_DEVICE="auto"
WHISPERX_COMPUTE_TYPE="float16"

# OpenAI Configuration
OPENAI_API_KEY=""
ENABLE_OPENAI_WHISPER=true

# Transcription Service Settings
TRANSCRIPTION_FALLBACK_STRATEGY="whisperx-first"
TRANSCRIPTION_MAX_RETRIES=3
TRANSCRIPTION_RETRY_DELAY=5000
TRANSCRIPTION_PROGRESS_TRACKING=true

# Queue Configuration
TRANSCRIPTION_CONCURRENCY=2
TRANSCRIPTION_MAX_ATTEMPTS=3
TRANSCRIPTION_JOB_TIMEOUT=1800000
TRANSCRIPTION_CLEANUP_INTERVAL=3600000
TRANSCRIPTION_MAX_COMPLETED_AGE=86400000

# HuggingFace Token (for speaker diarization models)
HUGGING_FACE_HUB_TOKEN=""

# Development/Testing
NODE_ENV="development"
DEBUG=false